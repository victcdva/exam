<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--labelName-->
    <style name="TitleName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9pt</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>

    </style>

    <!--icon-->
    <style name="icon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <!--labelName-->
    <style name="labelName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/labelName</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <!--label-->
    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:layout_marginLeft">280dp</item>
    </style>

</resources>
